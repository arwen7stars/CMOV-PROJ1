<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>

        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/monsoon</item>

        <!-- controls the normal state of components such as an unselected EditText -->
        <item name="colorControlNormal">@color/aluminum</item>
        <!-- overrides colorAccent as the activated or checked state for Checkboxes and RadioButtons -->
        <item name="colorControlActivated">@color/monsoon</item>
        <!-- controls the ripple coloring -->
        <item name="colorControlHighlight">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>

        <!-- custom dialog theme -->
        <item name="android:dialogTheme">@style/DialogStyle</item>
    </style>

    <style name="IconStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/primary_darker</item>
    </style>

    <style name="BigIconStyle">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/primary_darker</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>

        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/TitleDialogStyle</item>

        <item name="colorAccent">@color/monsoon</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/monsoon</item>
    </style>

    <style name="TitleDialogStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:windowBackground">@color/dark_background</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/iron</item>

        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AltPrimary.Button" parent="AppTheme">
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_darker</item>
    </style>
    <style name="Alt.Button" parent="AppTheme">
        <item name="colorAccent">@color/monsoon</item>
        <item name="colorControlHighlight">@color/base</item>
    </style>

</resources>
