<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.feup.cmov.customerapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity
            android:name=".login.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".login.LoginActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.LoginActivity" />
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".userOptions.ShowsActivity"
            android:label="Shows"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".userOptions.CafeteriaActivity"
            android:label="Cafeteria"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".userOptions.TransactionsActivity"
            android:label="Transactions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".userOptions.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".userOptions.VouchersActivity"
            android:label="Vouchers"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".AutomaticLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shows.ShowActivity"
            android:label="Show Details"
            android:parentActivityName=".userOptions.ShowsActivity" />
    </application>

</manifest>